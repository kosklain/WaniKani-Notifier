{
	"manifest_version": 2,
	"name": "Bunpro Review Notifier",
	"version": "1.0.1",
	"options_page": "options.html",
	"description": "Displays the number of reviews on Bunpro",
	"icons": {
		"128": "icons/bunpro.png"
	},
	"browser_action": {
		"default_icon": {
			"128": "icons/bunpro_grey.png"
		}
	},
	"author": "Kosklain",
	"background": {
		"scripts": ["bunpro.js"]
	},
	"permissions": [
		"background",
		"storage",
		"tabs",
		"https://www.bunpro.jp/*",
		"http://www.bunpro.jp/*",
		"https://bunpro.jp/api/*"
	]
}
